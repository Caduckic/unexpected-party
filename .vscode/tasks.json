{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DEBUG",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG",
                "PROJRCT_NAME=${fileBasenameNoExtension}",
                "OBJS=${fileBasenameNoExtension}.cpp"
            ],
            "windows": {
                "command": "mingw32-make"
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "type": "process",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "RELEASE-build",
            "command": "gcc",
            "args": [
                "-std=c17",
                "-m64",
                "-Ofast",
                "-mwindows",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/my.o",
                "-o",
                "${workspaceFolder}/build/release/game.exe",
                "-I./src",
                "-I./src/include",
                "-I${env:RAYLIB_4}/include",
                "-static-libgcc",
                "-L${env:RAYLIB_4}/lib",
                "-lraylib",

                /*"-lopengl32",
                "-lgdi32",
                "-lwinmm"*/
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "release-dir-check",
                "RELEASE-quick-clean",
                "MY-RC-build"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}